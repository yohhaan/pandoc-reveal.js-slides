{
    "name": "pandoc-slides",
    "dockerFile": "Dockerfile",
    "runArgs": [],
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "",
    "customizations": {
        "vscode": {
            "extensions": [
                // Git
                "eamodio.gitlens",
                // Other helpers
                "shardulm94.trailing-spaces"
            ],
            "settings": {
                // General settings
                "files.eol": "\n",
                "rewrap.autoWrap.enabled": false,
                "editor.formatOnSave": false
            }
        }
    }
}
